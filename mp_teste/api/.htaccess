Options +MultiViews
Options -Indexes

<Files "index.php">
    Require all granted
</Files>


RewriteEngine On
#Remove the comments to force https, you must have an SSL certificate.
#RewriteCond %{HTTPS} off
#RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R,L]

#Enable HTTP Authorization Header if you use php-cgi 
# $_SERVER["HTTP_AUTHORIZATION"]
RewriteCond %{HTTP:Authorization} ^(.*)
RewriteRule .* - [e=HTTP_AUTHORIZATION:%1]

RewriteRule "(private)" "-" [NC,F]
RewriteRule (users/getbyid/([0-9]|[0-9][0-9]|[0-9][0-9][0-9]|[0-9][0-9][0-9][0-9]))$ index.php?uri=$1&id=$2 [NC,QSA,L]
RewriteRule (users/deletesoft/([0-9]|[0-9][0-9]|[0-9][0-9][0-9]|[0-9][0-9][0-9][0-9]))$ index.php?uri=$1&id=$2 [NC,L]
RewriteRule (users/deletehard/([0-9]|[0-9][0-9]|[0-9][0-9][0-9]|[0-9][0-9][0-9][0-9]))$ index.php?uri=$1&id=$2 [NC,L]

RewriteRule ^(.*)$ index.php?uri=$1 [QSA,L]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f